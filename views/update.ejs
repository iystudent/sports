<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="css/main.css">
        <title>Edit Record</title>
    </head>
    <body>

        <div class="blurred hidden" id="blurred"></div>
        <div class="main">
      
        <div class="navbar">
          <ul>
          <div class="nav_bar_items">
          <div id="main_menu">
            <li><a href="/">Home</a></li>
            <li><a href="/new-record">Add new record</a></li>
          </div>
          </div>
      </ul> 
      </div>
          <div class="dv_columns">
      
              <div class="content">
                <div id="display_results" style="text-align: center;"> </div>
              </div>
          </div>
      <!-- form -->
      <div class="section" >
        <form  id="add_new_record">
            <label for="update_record"><strong>Update record</strong> </label><br>
            <span class="error" id="formError"></span>
            
            <input type="text" name="recordID" id="recordID" placeholder="Record ID" readonly>
            <input type="datetime-local" name="date" id="date" required>
            <input type="text" name="home_team" id="home_team" placeholder="Home Team" required>
            <input type="text" name="away_team" id="away_team" placeholder="Away Team" required>
            <input type="number" name="home_score" id="home_score" placeholder="Home Score" min="0" required>
            <input type="number" name="away_score" id="away_score" placeholder="Away Score" min="0" required>
            <input type="text" name="tournament" id="tournament" placeholder="Tournament" required>
            <input type="text" name="city" id="city" placeholder="City" required>
            <input type="text" name="country" id="country" placeholder="Country" required>
            <p>Please Neutrality:</p>
            <input type="radio" id="isTrue" name="neutral" value="true">
            <label for="isTrue" style="cursor: pointer;">Is Neutral : True</label><br><br>
            <input type="radio" id="isFalse" name="neutral" value="false">
            <label for="isFalse" style="cursor: pointer;">Is Neutral : False</label><br>  

            <button type="button" id="updateRecord" class="submit">Update Record</button>
        </form>
    </div>
  </div>
<script type="text/javascript" src="js/main.js"></script>
<script>recordToUpdate();</script>
</body>
</html>